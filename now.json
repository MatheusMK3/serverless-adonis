{
  "version": 2,
  "name": "serverless-adonis",
  "builds": [
    {
      "src": "/server.js",
      "use": "@now/node-server",
      "config": {
        "includeFiles": [
          "**"
        ],
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "env": {
    "ENV_PATH": "now.env",
    "APP_KEY": "@serverless-adonis-app_key"
  }
}