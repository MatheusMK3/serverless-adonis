{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@now/node-server",
      "config": {
        "includeFiles": [
          "**"
        ],
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "name": "serverless-adonis",
  "env": {
    "HOST": "127.0.0.1",
    "PORT": "3333",
    "NODE_ENV": "production",
    "CACHE_VIEWS": "false",
    "ENV_PATH": "now.env",
    "APP_KEY": "@serverless-adonis-app_key"
  }
}